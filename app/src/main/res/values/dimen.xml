<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Dimensions for the activity_detail.xml
    -->

    <!-- Side padding used for the majority of views in the
         DetailActivity -->
    <dimen name="sidePadding">24dp</dimen>
    <!-- Right padding for the group view displaying movie's
         quick details in the DetailActivity-->
    <dimen name="quick_infos_right_padding">56dp</dimen>

    <!-- Height for the backdrop image inside the detail activity-->
    <dimen name="backdrop_heigh">200dp</dimen>
    <!-- Margin used on the bottom of the backdrop image view-->
    <dimen name="backdrop_bottom_margin">8dp</dimen>

    <!-- Used on the bottom of the title's TextView-->
    <dimen name="title_bottom_margin">16dp</dimen>

    <dimen name="detail_title_text_size">24sp</dimen>

    <!-- Used as the bottom margin of the GroupView that contains
         the movie Quick Details -->
    <dimen name="quick_details_bottom_margin">16dp</dimen>

    <!-- Used by the textview that contains the Synopsis -->
    <dimen name="synopsis_bottom_margin">8dp</dimen>

    <!-- Used on the bottom of the director and cast textViews-->
    <dimen name="director_and_cast_bottom_margin">4dp</dimen>

    <!--Text size for the body text -->
    <dimen name="bodyTextSize">14sp</dimen>

    <!--Spacing used around the button inside of the DetailActivity -->
    <dimen name="button_padding">8dp</dimen>
    <!--Margin used on top of the Button inside of the DetailActivity -->
    <dimen name="button_top_margin">16dp</dimen>
    <!--Height of the button inside of the DetailActivity -->
    <dimen name="button_height">48dp</dimen>

    <!--
    Dimensions for the activity_main.xml
    -->

    <!--Spacing used around the recycler inside the MainActivity -->
    <dimen name="recycler_spacing">8dp</dimen>

    <!-- The margin for the bottom of the empty state group view-->
    <dimen name="empty_state_bottom_margin">80dp</dimen>

    <!-- The padding for the bottom of the empty state title-->
    <dimen name="empty_state_title_padding">8dp</dimen>

    <!-- The textSize of the empty state title-->
    <dimen name="empty_state_title_textsize">26sp</dimen>

    <!-- The Top padding of the empty state subtitle-->
    <dimen name="empty_state_subtitle_padding">4dp</dimen>

    <!-- The textSize of the refresh textView-->
    <dimen name="refresh_textView_textsize">24sp</dimen>

    <!-- The height of the refresh textView-->
    <dimen name="refresh_textView_height">92dp</dimen>

    <!--
    Dimensions for the movie_list_item.xml
    -->

    <!-- Width and Height of the movie Thumbnail image view -->
    <dimen name="movieThumbnail_IV_width">120dp</dimen>
    <dimen name="movieThumbnail_IV_height">160dp</dimen>

    <!-- Margins for the extra text group view -->
    <dimen name="extra_text_top_margin">2dp</dimen>
    <dimen name="extra_text_bottom_margin">8dp</dimen>

    <!-- Text size for the title and the year of the movie-->
    <dimen name="movie_title_text_size_main">16sp</dimen>
    <dimen name="movie_year_text_size_main">14sp</dimen>

</resources>